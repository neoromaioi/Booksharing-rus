@using Domain.Entities
@using Domain.Enums
@model UserEditingDTO
@{
    ViewData["Title"] = "UserEditing";
}

<div class="container-fluid p-0 h-100 ">
    <div class="row justify-content-center h-100 ">

        <div class="col-5 bg-primary" align="center">
            <img src="~/Media/Images/Common/endava_logo.png" width="200" style="margin-top: 15%; opacity: 0" />
            <h1 class="text-white font-weight-bolder" style="font-size: 3em; margin-top: 30%">Буккроссинг</h1>
        </div>
        <div class="col vertical-align">

            <div class="container">
                <div class="row justify-content-center align-content-center">
                    <div class="col justify-content-center align-content-center">

                        <h3 class="mt-xl-5 text-primary text-center mb-xl-5 font-weight-bold">Регистрация</h3>


                        <form asp-action="UserEditing" asp-controller="Account" method="post" class="pb-lg-2">
                            <div class="form-row">

                                <div class="col form-group">
                                    <label asp-for="@Model.FirstName"></label>
                                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Имя", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.FirstName)
                                </div>
                                <br />
                                <div class="col form-group">
                                    <label asp-for="@Model.LastName"></label>
                                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "Фамилия", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.LastName)
                                </div>

                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="@Model.Email"></label>

                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Адрес электронной почты", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email)

                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.UserName"></label>

                                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Никнейм", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="@Model.Password"></label>

                                    @Html.PasswordFor(m => m.Password, new { id = "passwordInput", data_toggle = "tooltip", data_placement = "bottom", title = "Пароль должен состоять только из 8 и более цифр или букв", placeholder = "Пароль (опционально)", @class = "form-control red-tooltip" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="@Model.NewPassword"></label>

                                    @Html.PasswordFor(m => m.NewPassword, new { id = "newPasswordInput", data_toggle = "tooltip", data_placement = "bottom", title = "Пароль должен состоять только из 8 и более цифр или букв", placeholder = "Новый пароль (опционально)", @class = "form-control red-tooltip" })
                                    @Html.ValidationMessageFor(m => m.NewPassword)
                                </div>
                            </div>
                            <br />
                            <div class="form-group mt-2 text-center">
                                @Html.ValidationMessage(CustomValidation.EditionError)
                            </div>

                            <div class="form-group mt-lg-4 text-center">
                                <button type="submit" class="btn btn-primary rounded col-5">Изменить</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('header').empty();
        $('footer').empty();
        $("body").css("height", "100%");
        $("html").css("height", "100%");
        $(".container-fluid").addClass("h-100");
        $("main").removeClass('pb-3').addClass("h-100");
    </script>
}